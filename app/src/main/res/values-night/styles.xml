<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Background">
        <item name="android:background">@color/black</item>
    </style>

    <style name="NightBackground">
        <item name="android:background">@color/black</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/small_padding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="iconPadding">8dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="SettingsText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/small_padding</item>
        <item name="android:paddingVertical">@dimen/medium_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="SearchLine">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:drawableTint">@color/black</item>
    </style>

    <style name="SearchLineLayout">
        <item name="android:background">@drawable/search_background</item>
    </style>

    <style name="ClearBtn">
        <item name="tint">@color/black</item>
    </style>

    <style name="SearchTrackName">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchTrackOther">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="No_results_connection_text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Connection_retry" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SearchText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/small_text_12</item>
        <item name="android:layout_marginTop">@dimen/small_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="LabelTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/vsmall_padding_4</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/on_search_background</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ValueTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/vsmall_padding_4</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NewPlaylistButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/vsmall_padding</item>
        <item name="android:paddingBottom">@dimen/vsmall_padding</item>
        <item name="android:paddingStart">@dimen/nvsmall_padding</item>
        <item name="android:paddingEnd">@dimen/vsmall_padding</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">@dimen/vbig_padding_52</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="EmptyStateText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="LibraryTabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="Nav">
        <item name="itemTextColor">@color/white</item>
        <item name="itemIconTint">@color/white</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="ToolbarStylePlayer">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="navigationIcon">@drawable/arrow_back</item>
    </style>

</resources>