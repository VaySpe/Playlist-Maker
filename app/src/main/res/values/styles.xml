<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Background">
        <item name="android:background">@color/background</item>
    </style>
    <style name="ToolbarStyle">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="navigationIcon">@drawable/arrow_back</item>
    </style>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/small_padding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="iconPadding">8dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="SettingsText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/small_padding</item>
        <item name="android:paddingVertical">@dimen/medium_padding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="SearchLine">
        <item name="android:textColorHint">@color/on_search_background</item>
        <item name="android:drawableTint">@color/on_search_background</item>
    </style>

    <style name="SearchLineLayout">
        <item name="android:background">@drawable/search_background</item>
    </style>

    <style name="ClearBtn">
        <item name="tint">@color/on_search_background</item>
    </style>

    <style name="SearchTrackName">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SearchTrackOther">
        <item name="android:textColor">@color/on_search_background</item>
    </style>

    <style name="SearchPoint">
        <item name="android:src">@drawable/ellipse</item>
    </style>

    <style name="SearchArrow">
        <item name="android:src">@drawable/arrow_forward</item>
    </style>

</resources>